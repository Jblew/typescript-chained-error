{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "strict": true,
        "declaration": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": false,
        "noImplicitAny": true,
        "allowJs": false,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "src/",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.spec.ts"
    ]
}